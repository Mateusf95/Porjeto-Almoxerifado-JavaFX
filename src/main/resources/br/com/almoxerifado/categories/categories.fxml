<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="dashboardPane" prefHeight="600.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="15.0" styleClass="container_style">
         <children>
            <FontIcon iconColor="WHITE" iconLiteral="mdi2l-label-multiple" iconSize="30" />
            <Label text="CATEGORIAS" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label layoutX="75.0" layoutY="28.0" text="&gt;" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label layoutX="75.0" layoutY="28.0" text="Adicionar" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <VBox prefHeight="300.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <children>
            <Label styleClass="shadow" text="Adicionar Categoria" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label text="Titulo:" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="textFielTitle">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label layoutX="30.0" layoutY="87.0" text="Descrição:" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="textAreaDescription" prefHeight="200.0" prefWidth="200.0" />
            <Button fx:id="btnSubmit" mnemonicParsing="false" text="CADASTRAR">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <styleClass>
            <String fx:value="container_style" />
            <String fx:value="forms" />
         </styleClass>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0" styleClass="container_style" VBox.vgrow="ALWAYS">
         <children>
            <Label styleClass="shadow" text="Categorias Cadastradas" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <TableView fx:id="tableViewCategories" prefHeight="200.0" prefWidth="200.0" styleClass="table_view" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="tableColumID" prefWidth="73.0" text="ID" />
                  <TableColumn fx:id="tableColumTitle" prefWidth="203.0" text="Titulo" />
                  <TableColumn fx:id="tableColumDescription" prefWidth="414.0" text="Descrição" />
                  <TableColumn fx:id="tableColumActions" prefWidth="175.0" text="Ações" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</VBox>
